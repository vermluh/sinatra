doctype html
css:
  tbody tr:hover
  {background-color: #f5f5f5}
  td
  {border-left:1px solid black;
  border-top:1px solid black;}
  table
  {border-top:1px solid black;
  border-left:1px solid black;
  border-bottom:1px solid black;
  border-right:1px solid black;
  border-collapse:collapse;}
html
  head
    title KA_FEHLERCODE
    meta name="keywords" content="template language"
    meta charset="utf-8"
    
  body
    table
      | <thead><tr><th>KAF_NUMMER</th><th>Text</th></tr></thead>
      tbody
        - KaFehlercode.order(:kaf_nummer).each do |code|
          tr
            td.code = code.kaf_nummer.to_i
            td.message = code.kaf_text.encode('UTF-8')